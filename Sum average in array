import java.util.*;
import java.util.Arrays;
public class LinearsearchExample{

	public static void main(String[] args) {
	     
	    int a1[]={1,2,3,4,5};
	    int sum=0,avg=0;
	for(int i=0;i<a1.length;i++){
	    
	        sum+=a1[i];
	    }
	avg=sum/a1.length;
	    
	 System.out.println("sum="+sum);
	  System.out.println("avg="+avg);
	    
	}}
